{% extends "layout.html.twig" %}

{% block page_name %}{{lang('edit_group_heading') }}{% endblock %}

{% block body %}
    
    <p>{{lang('edit_group_subheading') }}</p>

    {{form_open(current_url()) }}
    <fieldset>

    <div class="form-group">
        {{lang('edit_group_name_label', 'group_name') }} <br />
        {{form_input(group_name) }}
    </div>

    <div class="form-group">
        {{lang('edit_group_desc_label', 'description') }} <br />
        {{form_input(group_description) }}
    </div>

    <p>{{form_submit('submit', lang('edit_group_submit_btn'), 'class="btn btn-lg btn-success btn-block"') }}</p>
    </fieldset>

    {{form_close() }}
{% endblock %}