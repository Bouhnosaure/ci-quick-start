{% extends "auth-layout.html.twig" %}

{% block page_name %}{{ lang('register_heading') }}{% endblock %}

{% block body %}
    <div class="panel-body">

        {% if message %}
            <div class="alert alert-success alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                {{ message }}
            </div>
        {% endif %}

        <p>{{ lang('register_subheading') }}</p>


        {{ form_open(current_url()) }}
        <fieldset>

            <div class="form-group">
                {{ lang('register_fname_label', 'first_name')}} 
                {{ form_input(first_name) }}
            </div>

            <div class="form-group">
                {{ lang('register_lname_label', 'last_name')}} 
                {{ form_input(last_name) }}
            </div>

            <div class="form-group">
                {{ lang('register_email_label', 'email')}} 
                {{ form_input(email) }}
            </div>

            <div class="form-group">
                {{ lang('register_phone_label', 'phone')}} 
                {{ form_input(phone) }}
            </div>

            <div class="form-group">
                {{ lang('register_password_label', 'password')}} 
                {{ form_input(password) }}
            </div>

            <div class="form-group">
                {{ lang('register_password_confirm_label', 'password_confirm')}} 
                {{ form_input(password_confirm) }}
            </div>

            <p>{{ form_submit({'value': lang('register_submit_btn') ,'class':'btn btn-lg btn-success btn-block'}) }}</p>


        </fieldset>
        {{ form_close()}}
    </div>
{% endblock %}
