{% extends "layout.html.twig" %}

{% block page_name %}{{ lang('create_group_heading') }}{% endblock %}

{% block body %}
    <p>{{lang('create_group_subheading') }}</p>

    {{form_open("create-group") }}
    <fieldset>
        
        <div class="form-group">
            {{lang('create_group_name_label', 'group_name') }} <br />
            {{form_input(group_name) }}
        </div>
        
        <div class="form-group">
            {{lang('create_group_desc_label', 'description') }} <br />
            {{form_input(description) }}
        </div>
        
        <p>{{form_submit('submit', lang('create_group_submit_btn'), 'class="btn btn-lg btn-success btn-block"') }}</p>
        
    </fieldset>
    {{ form_close() }}
{% endblock %}