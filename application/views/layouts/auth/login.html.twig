{% extends "auth-layout.html.twig" %}

{% block page_name %}{{ lang('login_heading') }}{% endblock %}

{% block body %}
    <div class="panel-body">

        {% if message %}
            <div class="alert alert-success alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                {{ message }}
            </div>
        {% endif %}

        <a class="btn btn-block btn-social btn-facebook" href="login/social/facebook">
            <i class="fa fa-facebook"></i> Sign in with Facebook
        </a>
        <a class="btn btn-block btn-social btn-twitter" href="login/social/twitter">
            <i class="fa fa-twitter"></i> Sign in with Twitter
        </a>
        <a class="btn btn-block btn-social btn-google-plus" href="login/social/google">
            <i class="fa fa-google-plus"></i> Sign in with Google
        </a>

        <hr>

        <p> {{ lang('login_subheading') }} </p>

        {{ form_open("login") }}
        <fieldset>

            <div class="form-group">
                {{ lang('login_identity_label', 'identity') }}
                {{ form_input({'name':'identity','class':'form-control','autofocus':'autofocus'}) }}
            </div>

            <div class="form-group">
                {{ lang('login_password_label', 'password') }}
                {{ form_input({'name':'password','class':'form-control','type':'password'}) }}
            </div>

            <div class="checkbox">
                <label>
                    {{ form_checkbox('remember', '1', FALSE, 'id="remember"') }} {{ lang('login_remember_label', 'remember') }}
                </label>
            </div>

            <p> {{ form_submit({'value': lang('login_submit_btn') ,'class':'btn btn-lg btn-success btn-block'} ) }}</p>
        </fieldset>

        {{ form_close() }}

        <hr>

        <p>
            <a href="forgot-password" class="btn btn-primary btn-sm btn-block"> {{ lang('login_forgot_password') }}</a>
        </p>
    </div>
{% endblock %}