{% extends "layout.html.twig" %}

{% block page_name %}{{ lang('manage_groups_heading') }}{% endblock %}

{% block body %}

    <p>{{ lang('manage_groups_subheading') }}</p>

    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>{{ lang('manage_groups_fname_th') }}</th>
                    <th>{{ lang('manage_groups_desc_th') }}</th>
                    <th>{{ lang('manage_groups_action_th') }}</th>
                </tr>
            </thead>
            <tbody>
                {% for group in groups %}
                    <tr>
                        <td>{{ group.id|escape }}</td>
                        <td>{{ group.name|escape }}</td>
                        <td>{{ group.description|escape }}</td>
                        <td>{{ anchor("edit-group/"~group.id, 'Edit') }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <p>
        {{ anchor('create-user', lang('manage_groups_create_user_link'), 'class="btn btn-primary"') }} 
        {{ anchor('create-group', lang('manage_groups_create_group_link'), 'class="btn btn-primary"') }}
    </p>
{% endblock %}