{% extends "auth-layout.html.twig" %}

{% block page_name %}{{ lang('reset_password_heading') }}{% endblock %}

{% block body %}
    <div class="panel-body">

        {% if message %}
            <div class="alert alert-success alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                {{ message }}
            </div>
        {% endif %}

        {{ form_open('reset-password/' ~ code) }}

        <fieldset>

            <div class="form-group">
                <label for="new_password">{{ sprintf(lang('reset_password_new_password_label'), min_password_length) }}</label> <br />
                {{ form_input(new_password) }}
            </div>

            <div class="form-group">
                {{ lang('reset_password_new_password_confirm_label', 'new_password_confirm') }} <br />
                {{ form_input(new_password_confirm) }}
            </div>

            {{ form_input(user_id) }}
            {{ form_hidden(csrf)  }}

            <p>{{ form_submit('submit', lang('reset_password_submit_btn'), 'class="btn btn-lg btn-success btn-block"') }}</p>

        </fieldset>
        {{ form_close() }}
    </div>
{% endblock %}